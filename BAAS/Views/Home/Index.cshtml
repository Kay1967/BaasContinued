@model BAAS.Models.Login

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <img src="~/OIP.jpg" height="150" width="200"/>
    <hr/>
    <br/>
    <br/>
    <div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Index">
            
           
            <div class="form-group">
            
                <label  class="control-labe">Username:</label>
                
                <input asp-for="Email" placeholder="please enter your emailaddress" class="form-control" />
                <span class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label text="password" class="control-label">password:</label>
                
                <input asp-for="password" type="password" placeholder="please enter your password" class="form-control" />
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
               
            </div>
        </form>
    </div>
    
</div>

</div>
